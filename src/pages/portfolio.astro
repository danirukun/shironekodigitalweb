---
import Layout from '../components/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
	{
		title: "ClubCast.tv",
		description: "A comprehensive streaming and community platform designed for creators and their audiences. Built with scalability and real-time interaction at its core.",
		tags: ["Streaming", "Web Platform", "Community", "Real-time"],
		image: undefined // Placeholder will be used
	}
];
---

<Layout title="Portfolio" description="Showcase of projects and digital solutions built by Shironeko Digital.">
	<section class="pt-32 pb-24 bg-gray-50/50">
		<div class="max-w-6xl mx-auto px-6">
			<div class="max-w-3xl">
				<h1 class="text-5xl font-bold tracking-tight text-gray-900 mb-6 leading-tight">
					Selected <span class="text-gray-400">works.</span>
				</h1>
				<p class="text-xl text-gray-500 leading-relaxed">
					A showcase of the digital products and solutions we've built for our partners 
					and our own research projects.
				</p>
			</div>
		</div>
	</section>

	<section class="py-24 bg-white">
		<div class="max-w-6xl mx-auto px-6">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
				{projects.map(project => (
					<ProjectCard {...project} />
				))}
				
				<div class="rounded-[2.5rem] border-2 border-dashed border-gray-100 flex flex-col items-center justify-center p-12 text-center min-h-[400px]">
					<div class="size-16 rounded-full bg-gray-50 flex items-center justify-center text-gray-300 mb-6">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-8">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">More coming soon</h3>
					<p class="text-gray-400 max-w-xs mx-auto">
						We're currently working on several exciting new projects. Check back soon for updates.
					</p>
				</div>
			</div>
		</div>
	</section>

	<section class="py-24 border-t border-gray-100">
		<div class="max-w-6xl mx-auto px-6 text-center">
			<h2 class="text-2xl font-bold text-gray-900 mb-8">Interested in working together?</h2>
			<a href="mailto:hello@shironekodigital.com" class="inline-flex items-center gap-2 text-gray-900 font-bold hover:gap-3 transition-all underline decoration-gray-200 underline-offset-8 hover:decoration-gray-900">
				Get started on your project
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
					<path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
				</svg>
			</a>
		</div>
	</section>
</Layout>
