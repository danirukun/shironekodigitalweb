---
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Legal information and contact details for Shironeko Digital OÜ" />
		<title>Impressum - Shironeko Digital</title>
	</head>
	<body class="bg-white text-gray-900 min-h-screen flex flex-col">
		<main class="flex-1 px-6 py-16">
			<div class="max-w-2xl mx-auto">
				<h1 class="text-3xl md:text-4xl font-semibold tracking-tight mb-8">Impressum</h1>
				
				<div class="space-y-6 text-gray-700">
					<div>
						<h2 class="text-xl font-semibold text-gray-900 mb-2">Company Information</h2>
						<p class="font-medium">Shironeko Digital OÜ</p>
						<p>Sepapaja tn 6</p>
						<p>15551 Tallinn, Estonia</p>
					</div>

					<div>
						<h2 class="text-xl font-semibold text-gray-900 mb-2">Contact</h2>
						<p>
							<a href="mailto:hello@shironekodigital.com" class="text-gray-900 hover:underline">
								hello@shironekodigital.com
							</a>
						</p>
					</div>

					<div>
						<h2 class="text-xl font-semibold text-gray-900 mb-2">Registry Information</h2>
						<p>Registry code: 17395577</p>
						<p class="text-sm text-gray-500 mt-1">Registered in Estonia</p>
					</div>
				</div>

				<div class="mt-12 pt-8 border-t border-gray-200">
					<a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">
						← Back to home
					</a>
				</div>
			</div>
		</main>

		<footer class="border-t border-gray-200 py-8 px-6">
			<div class="max-w-2xl mx-auto text-center text-sm text-gray-500">
				<p>&copy; {new Date().getFullYear()} Shironeko Digital OÜ. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>

